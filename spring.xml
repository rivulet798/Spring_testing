<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="beans.Client">
         <constructor-arg value="1"/>
         <constructor-arg value="John Smith"/>
    </bean>

    <bean id="event" class="beans.Event" scope="prototype">

        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>

        <constructor-arg>
            <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>

        <property name="msg" value="Some information"/>

    </bean>

    <bean id="consoleEventLogger" class="logger.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="logger.FileEventLogger" init-method="init">
        <constructor-arg value="log.txt"></constructor-arg>
    </bean>

    <bean id="cacheFileEventLogger" class="logger.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="log.txt"/>
        <constructor-arg value="5"/>
    </bean>

    <bean id="app" class="runner.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
    </bean>





</beans>
